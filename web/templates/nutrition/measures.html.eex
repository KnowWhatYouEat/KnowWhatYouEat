<div class="menu">
<a href="http://localhost:4000/measures">Measures</a>&nbsp;&nbsp;|&nbsp;&nbsp;<a href="http://localhost:4000/search">Search</a>&nbsp;&nbsp;|&nbsp;&nbsp;<a href="http://localhost:4000/about">about us</a>&nbsp;&nbsp;|&nbsp;&nbsp;<a href="http://localhost:4000/contact">contact</a>&nbsp;&nbsp;|&nbsp;&nbsp;<a href="http://localhost:4000">Homepage</a>
</div>
<div class="bouquet">
<div class="hollyhack">
<h3>Measures</h3><br/>
<form action=<%= nutrition_path(@conn, :report) %>>
   <table>
      <tr>
         <th>Ingredient</th>
         <th>Measure</th>
         <th>Amount</th>
      </tr>
       <%= for %{"id" => id,
                  "name" => name,
                  "measures" => measures,
                  "ndbno" => ndbno} <- @form_values do %>
         <% id = id <> "[]" %>
         <tr>
         <input type="hidden" name="<%= id %>" id="ndbno" value="<%= ndbno %>">

         <td><%= name %></td>

         <td><select required name="<%= id %>" id="measure">
            <%= for m <- measures do %>
               <option value="<%= m %>" name="<%= m %>"><%= m %></option>
            <% end %>
         </select></td>

         <td><input type="text" name="<%= id %>" id="amount"></td>
         </tr>
      <% end %>
   </table>
   <input type="Submit" value="Submit">
</form>
</div>
</div>

